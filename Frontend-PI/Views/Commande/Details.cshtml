@model IEnumerable<Frontend_PI.Models.CommandeDetails>

@{
    ViewBag.Title = "Details";
}

<h2>Details</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            Nom du produit
        </th>
        <th>
            Réference commande
        </th>
        <th>
            @Html.DisplayNameFor(model => model.qte)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Frontend_PI.Controllers.ProductController.show(@item.idProduct)
        </td>
        <td>
            @Session["referenceOrder"].ToString()
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.qte)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.id }) |
            @Html.ActionLink("Details", "Details", new { id=item.id }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.id })
        </td>
    </tr>
}

</table>
